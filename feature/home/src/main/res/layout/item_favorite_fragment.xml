<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_favorite_fragment_view_holder_cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_size_10"
    app:cardElevation="@dimen/dimen_size_05"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/alabaster_500"
    app:strokeWidth="@dimen/dimen_size_01"
    android:layout_marginStart="@dimen/_10sp"
    android:background="@color/white"
    android:layout_marginEnd="@dimen/_10sp"
    android:layout_marginTop="@dimen/dimen_size_05"
    android:layout_marginBottom="@dimen/dimen_size_05">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_size_16"
        android:paddingEnd="@dimen/dimen_size_16">


        <TextView
            android:id="@+id/item_favorite_fragment_view_holder_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_16"
            android:textSize="@dimen/_22sp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/item_favorite_fragment_view_holder_tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/bay_leaf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_favorite_fragment_view_holder_tv_title"
            tools:text="Title" />


        <ImageView
            android:id="@+id/item_favorite_fragment_view_holder_iv_image"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:layout_marginBottom="@dimen/dimen_size_20"
            android:layout_width="@dimen/dimen_size_60"
            android:layout_height="@dimen/dimen_size_100"
            android:contentDescription="@null"
            android:src="@android:drawable/stat_notify_sync"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_icon_beer"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0.5"
            android:progressTint="@color/azure_radiance"
            android:progressBackgroundTint="@color/grey"
            android:stepSize="0.5"
            android:layout_marginBottom="@dimen/dimen_size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>