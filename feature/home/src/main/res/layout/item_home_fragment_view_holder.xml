<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_home_fragment_view_holder_cv_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_70"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_size_10"
    app:cardElevation="@dimen/dimen_size_05"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/alabaster_500"
    app:strokeWidth="@dimen/dimen_size_01"
    android:layout_marginStart="@dimen/_10sp"
    android:background="@color/white"
    android:layout_marginEnd="@dimen/_10sp"
    android:layout_marginTop="@dimen/dimen_size_05"
    android:layout_marginBottom="@dimen/dimen_size_05">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_size_16"
        android:paddingEnd="@dimen/dimen_size_16">


        <ImageView
            android:id="@+id/item_home_fragment_view_holder_iv_beer"
            android:layout_width="@dimen/dimen_size_40"
            android:layout_height="@dimen/dimen_size_40"
            android:src="@android:drawable/stat_notify_sync"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null"
            tools:tint="@color/black" />

        <TextView
            android:id="@+id/item_home_fragment_view_holder_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_16"
            android:layout_marginTop="@dimen/dimen_size_16"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/dimen_size_10"
            app:layout_constraintEnd_toStartOf="@+id/item_home_fragment_view_holder_iv_favorite"
            app:layout_constraintStart_toEndOf="@+id/item_home_fragment_view_holder_iv_beer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/item_home_fragment_view_holder_tv_subtitle"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_16"
            app:layout_constraintStart_toEndOf="@+id/item_home_fragment_view_holder_iv_beer"
            app:layout_constraintTop_toBottomOf="@+id/item_home_fragment_view_holder_tv_title"
            tools:text="Sibtitle" />

        <TextView
            android:id="@+id/item_home_fragment_view_holder_tv_favorite_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/amazon"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/item_home_fragment_view_holder_tv_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/item_home_fragment_view_holder_tv_subtitle"
            android:text="" />

<!--        <ImageView-->
<!--            android:id="@+id/item_home_fragment_view_holder_iv_favorite_status"-->
<!--            android:visibility="gone"-->
<!--            android:layout_marginTop="@dimen/dimen_size_02"-->
<!--            android:layout_width="@dimen/dimen_size_10"-->
<!--            android:layout_height="@dimen/dimen_size_10"-->
<!--            android:layout_marginStart="@dimen/dimen_size_02"-->
<!--            android:src="@drawable/ic_favorite_selected"-->
<!--            android:tint="@color/amazon"-->
<!--            app:layout_constraintStart_toEndOf="@+id/item_home_fragment_view_holder_tv_favorite_status"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/item_home_fragment_view_holder_tv_subtitle"-->
<!--            android:contentDescription="@null" />-->


        <ImageView
            android:id="@+id/item_home_fragment_view_holder_iv_favorite"
            android:layout_width="@dimen/dimen_size_20"
            android:layout_height="@dimen/dimen_size_20"
            android:contentDescription="@null"
            android:src="@drawable/ic_favorite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>